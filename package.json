{
  "name": "context-testing",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm run dev:next\" \"pnpm run dev:convex\"",
    "dev:next": "next dev --turbopack -H 0.0.0.0",
    "dev:convex": "convex dev",
    "build": "pnpm run lint && pnpm run build:convex && pnpm run build:next",
    "build:next": "next build --turbopack",
    "build:convex": "convex deploy",
    "lint": "oxlint --type-aware",
    "scan": "next dev & pnpx react-scan@latest http://localhost:3000"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.33.0",
    "@clerk/themes": "^2.4.22",
    "@fluentui/react-context-selector": "^9.2.7",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@t3-oss/env-nextjs": "^0.13.8",
    "babel-plugin-react-compiler": "19.1.0-rc.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.27.3",
    "convex-helpers": "^0.1.104",
    "lucide-react": "^0.544.0",
    "next": "15.5.3",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-scan": "^0.4.3",
    "simple-icons": "^15.15.0",
    "svix": "^1.76.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.11",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "oxlint": "^1.18.0",
    "oxlint-tsgolint": "^0.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5"
  }
}
