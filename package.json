  "scripts": {
    "dev": "concurrently -c '#504269,#edb06b' \"pnpm run dev:next\" \"pnpm run dev:convex\"",
    "dev:next": "next dev --turbopack -H 0.0.0.0",
    "dev:convex": "convex dev",
